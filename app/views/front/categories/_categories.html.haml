.container.products
  .row
    .col-xs-3
      = render 'menu'
    .col-xs-9
      %h4= @category.title
      .row
        - @category.children.each do |child|
          .service-block.col-xs-3
            .thumbnail
              - child.manufacturers.each do |manufacturer|
                = link_to category_path(id: child.id), class: "stylish" do
                  %span.icon
                    /%img{alt: "post one", src: "/img/wash/logo1.png", class: ""}
                    = image_tag manufacturer.manufacturer_pictures.first.picture.url(:preview100x100)
              .clearfix
              %br
              - if child.category_pictures.first
                = image_tag child.category_pictures.first.picture.url(:preview100x100)
              %h5= child.title
  .clearfix    
  %br
