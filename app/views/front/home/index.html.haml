  #carousel-brands-generic.carousel.slide.carousel-products{"data-ride" => "carousel", "data-interval" => "false"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#carousel-brands-generic"}
      %li{"data-slide-to" => "1", "data-target" => "#carousel-brands-generic"}
    / Wrapper for slides
    .carousel-inner
      - Brand.all.each_slice(4).with_index do |brands, idx|
        .item{class: "#{idx > 0 ? '' : 'active'}"}
          .row.thumbs-list
            - brands.each do |brand|
              .col-lg-3
                .text-center.service-block
                  .style
                    = link_to brand_path(id: brand.id), class: "stylish" do
                      %span.icon
                        - brand.brand_pictures.each do |brand_picture|
                          = image_tag brand_picture.picture.url(:preview100x100), alt: "post one"
                  %h4= brand.title
                  %p= brand.short_description
    %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-brands-generic"}
      ‹
    %a.right.carousel-control{"data-slide" => "next", href: "#carousel-brands-generic"}
      ›
